{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build with Mingw 3.4.2 (winbgi)",
            "command": "D:\\Projects\\mingw3.4.2\\bin\\g++.exe",
            "args": [
                "-g",
                "-m32",
                "${file}",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\Projects\\mingw3.4.2\\bin\\"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}